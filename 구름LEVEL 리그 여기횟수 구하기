n=int(input())
print(round(n*(n-1)/2))

#n이4를 입력
#4*(4-1)/2=6

자바 코드
import java.util.Scanner; 
        public class Main { 
        public static void main(String[] args) { 
                Scanner in = new Scanner(System.in); 
                int team = in.nextInt(); 
                int round = team * (team-1)/2; 
    System.out.println(round); in.close(); } 
 }
